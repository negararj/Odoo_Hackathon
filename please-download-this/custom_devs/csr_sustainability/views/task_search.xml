<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View for Sustainability Tasks -->
    <record id="view_task_sustainability_search" model="ir.ui.view">
        <field name="name">project.task.search.sustainability</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <!-- Add search field for project sustainability -->
            <field name="project_id" position="after">
                <field name="project_id" string="Sustainability Project" 
                       domain="[('is_sustainability', '=', True)]"/>
            </field>
            
            <!-- Add filter for sustainability tasks -->
            <filter name="open_tasks" position="after">
                <separator/>
                <filter string="Sustainability Tasks" name="sustainability_tasks" 
                        domain="[('project_id.is_sustainability', '=', True)]"
                        help="Show only tasks from sustainability projects"/>
            </filter>
        </field>
    </record>
</odoo>

