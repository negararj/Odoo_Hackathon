<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu Root for CSR and Sustainability -->
    <menuitem id="menu_csr_root"
              name="CSR &amp; Sustainability"
              sequence="100"/>

    <!-- Sustainability Projects Menu -->
    <menuitem id="menu_csr_projects"
              name="Projects"
              parent="menu_csr_root"
              action="action_view_sustainability_projects"
              sequence="10"/>

    <!-- Sustainability Tasks Menu -->
    <menuitem id="menu_csr_tasks"
              name="Tasks"
              parent="menu_csr_root"
              action="action_view_sustainability_tasks"
              sequence="20"/>

    <!-- Employee Sustainability Menu -->
    <menuitem id="menu_csr_employees"
              name="Employees"
              parent="menu_csr_root"
              action="action_view_sustainability_employees"
              sequence="30"/>

    <!-- Activities Menu for Employees -->
    <menuitem id="menu_csr_activities"
              name="Activities"
              parent="menu_csr_root"
              action="action_view_activities_employee"
              sequence="40"
              groups="base.group_user"/>

    <!-- My Purchases Menu for Employees -->
    <menuitem id="menu_csr_my_purchases"
              name="My Purchases"
              parent="menu_csr_root"
              action="action_view_my_purchases"
              sequence="50"
              groups="base.group_user"/>

    <!-- NGOs Menu -->
    <menuitem id="menu_csr_ngos"
              name="NGOs"
              parent="menu_csr_root"
              action="action_view_ngos"
              sequence="60"/>
</odoo>

