<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sustainability Projects Action -->
    <record id="action_view_sustainability_projects" model="ir.actions.act_window">
        <field name="name">Sustainability Projects</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_sustainability', '=', True)]</field>
        <field name="context">{'search_default_sustainability_projects': 1, 'group_by': 'project_status'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Sustainability Project
            </p>
            <p>
                Track and manage your sustainability initiatives through projects.
            </p>
        </field>
    </record>

    <!-- Form View for Sustainability Project -->
    <record id="view_project_sustainability_form" model="ir.ui.view">
        <field name="name">project.project.form.sustainability</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <!-- Add sustainability fields -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_sustainability"/>
                <field name="ngo_id" groups="csr_sustainability.group_ngo_portal"/>
                <field name="xp" invisible="not is_sustainability"/>
                <field name="employee_ids" widget="many2many_tags" 
                       groups="base.group_user"
                       invisible="not is_sustainability"/>
                <field name="completed_by_employee_ids" widget="many2many_tags" 
                       groups="base.group_user"
                       invisible="not is_sustainability"
                       readonly="1"/>
            </xpath>
            
            <!-- Add Join Project button in header for employees -->
            <xpath expr="//header" position="inside">
                <button name="%(csr_sustainability.action_join_project_wizard)d"
                        type="action"
                        string="Join Project"
                        class="oe_highlight"
                        groups="base.group_user"
                        invisible="not is_sustainability"/>
                <button name="action_mark_done"
                        type="object"
                        string="Mark as Done"
                        class="oe_highlight"
                        groups="base.group_user"
                        invisible="not can_mark_done"/>
            </xpath>
        </field>
    </record>

    <!-- List View for Sustainability Project -->
    <record id="view_project_sustainability_tree" model="ir.ui.view">
        <field name="name">project.project.tree.sustainability</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <!-- Add sustainability columns -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_sustainability"/>
                <field name="ngo_id"/>
                <field name="xp"/>
                <field name="employee_ids" widget="many2many_tags"/>
                <field name="completed_by_employee_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <!-- Kanban View for Sustainability Project -->
    <record id="view_project_sustainability_kanban" model="ir.ui.view">
        <field name="name">project.project.kanban.sustainability</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="default_group_by">project_status</attribute>
            </xpath>
            <xpath expr="//field[@name='sequence']" position="after">
                <field name="project_status"/>
                <field name="employee_ids"/>
                <field name="completed_by_employee_ids"/>
                <field name="xp"/>
            </xpath>
            <xpath expr="//t[@t-name='card']" position="inside">
                <div t-if="is_sustainability" class="o_project_kanban_sustainability_info mt-2">
                    <div class="row">
                        <div class="col-6" t-if="record.ngo_id.value">
                            <div class="text-muted small">NGO</div>
                            <div><field name="ngo_id"/></div>
                        </div>
                        <div class="col-6" t-if="record.xp.raw_value > 0">
                            <div class="text-muted small">XP Reward</div>
                            <div><strong><field name="xp"/> XP</strong></div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <div class="text-muted small">Employees</div>
                            <div><field name="employee_ids" widget="many2many_tags" nolabel="1"/></div>
                        </div>
                        <div class="col-6">
                            <div class="text-muted small">Completed By</div>
                            <div><field name="completed_by_employee_ids" widget="many2many_tags" nolabel="1"/></div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
