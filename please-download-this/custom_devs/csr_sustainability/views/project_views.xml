<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sustainability Projects Action -->
    <record id="action_view_sustainability_projects" model="ir.actions.act_window">
        <field name="name">Sustainability Projects</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_sustainability', '=', True)]</field>
        <field name="context">{'search_default_sustainability_projects': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Sustainability Project
            </p>
            <p>
                Track and manage your sustainability initiatives through projects.
            </p>
        </field>
    </record>

    <!-- Form View for Sustainability Project -->
    <record id="view_project_sustainability_form" model="ir.ui.view">
        <field name="name">project.project.form.sustainability</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <!-- Add sustainability fields -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_sustainability"/>
                <field name="ngo_id" groups="csr_sustainability.group_ngo_portal"/>
                <field name="xp" invisible="not is_sustainability"/>
                <field name="employee_ids" widget="many2many_tags" 
                       groups="base.group_user"
                       invisible="not is_sustainability"/>
            </xpath>
            
            <!-- Add Join Project button in header for employees -->
            <xpath expr="//header" position="inside">
                <button name="%(csr_sustainability.action_join_project_wizard)d"
                        type="action"
                        string="Join Project"
                        class="oe_highlight"
                        groups="base.group_user"
                        invisible="not is_sustainability"/>
            </xpath>
        </field>
    </record>

    <!-- List View for Sustainability Project -->
    <record id="view_project_sustainability_tree" model="ir.ui.view">
        <field name="name">project.project.tree.sustainability</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <!-- Add sustainability columns -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_sustainability"/>
                <field name="ngo_id"/>
                <field name="xp"/>
                <field name="employee_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
