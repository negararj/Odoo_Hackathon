<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Activity Wizard Form View -->
    <record id="view_purchase_activity_wizard_form" model="ir.ui.view">
        <field name="name">csr.purchase.activity.wizard.form</field>
        <field name="model">csr.purchase.activity.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase CSR Activity">
                <sheet>
                    <group>
                        <group>
                            <field name="activity_id" readonly="1"/>
                            <field name="employee_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="xp_cost" readonly="1"/>
                            <field name="o2_value" readonly="1"/>
                            <field name="current_xp" readonly="1"/>
                            <field name="can_purchase" readonly="1" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <div class="alert alert-warning" role="alert" invisible="can_purchase">
                        <strong>Insufficient XP!</strong> You need <field name="xp_cost" readonly="1"/> XP but only have <field name="current_xp" readonly="1"/> XP.
                    </div>
                </sheet>
                <footer>
                    <button name="action_purchase" 
                            string="Purchase" 
                            type="object" 
                            class="btn-primary"
                            invisible="not can_purchase"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Purchase Activity Wizard Action -->
    <record id="action_purchase_activity_wizard" model="ir.actions.act_window">
        <field name="name">Purchase Activity</field>
        <field name="res_model">csr.purchase.activity.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="csr_sustainability.model_csr_activity"/>
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>

